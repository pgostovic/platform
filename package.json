{
  "name": "@phnq/platform",
  "version": "1.8.1",
  "description": "Stuff for microservices",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgostovic/platform.git"
  },
  "main": "index.js",
  "scripts": {
    "preinstall": "scripts/preinstall.sh",
    "dist": "tsc",
    "postdist": "ts-node scripts/postdist",
    "clean": "rimraf dist",
    "nats": "docker run -p 4222:4222 -ti nats:latest",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "build": "npm run build:api; npm run build:auth",
    "build:api": "npm run clean; npm run dist; cd dist; docker build -f ../build/api/Dockerfile -t=api .",
    "build:auth": "npm run clean; npm run dist; cd dist; docker build -f ../build/auth/Dockerfile -t=auth .",
    "test": "jest",
    "release:patch": "npm run clean; npm version patch; npm run dist; cd dist; npm publish",
    "release:minor": "npm run clean; npm version minor; npm run dist; cd dist; npm publish"
  },
  "author": "Patrick Gostovic",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.47",
    "@types/pretty-hrtime": "^1.0.0",
    "@types/shelljs": "^0.8.8",
    "@types/uuid": "^3.4.9",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "jest": "^25.5.4",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@phnq/log": "^1.1.4",
    "@phnq/message": "^1.11.0",
    "@phnq/model": "^1.7.2",
    "@types/cls-hooked": "^4.3.0",
    "bcrypt": "^3.0.8",
    "cls-hooked": "^4.2.2",
    "crypto-random-string": "^3.2.0",
    "pretty-hrtime": "^1.0.3",
    "tedis": "^0.1.12",
    "uuid": "^3.4.0",
    "validator": "^11.1.0"
  }
}
