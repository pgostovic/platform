{
  "name": "@phnq/platform",
  "version": "1.4.2",
  "description": "Stuff for microservices",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgostovic/platform.git"
  },
  "main": "index.server.js",
  "browser": "index.client.js",
  "scripts": {
    "preinstall": "scripts/preinstall.sh",
    "dist": "tsc",
    "postdist": "ts-node scripts/postdist",
    "clean": "rimraf dist",
    "nats": "docker run -p 4222:4222 -ti nats:latest",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "build": "npm run build:api; npm run build:auth",
    "build:api": "npm run clean; npm run dist; cd dist; docker build -f ../build/api/Dockerfile -t=api .",
    "build:auth": "npm run clean; npm run dist; cd dist; docker build -f ../build/auth/Dockerfile -t=auth .",
    "test": "jest",
    "release:patch": "npm version patch; npm run dist; cd dist; npm publish",
    "release:minor": "npm version minor; npm run dist; cd dist; npm publish"
  },
  "author": "Patrick Gostovic",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.6",
    "@types/pretty-hrtime": "^1.0.0",
    "@types/shelljs": "^0.8.5",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.7.1",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@phnq/log": "^1.1.4",
    "@phnq/message": "^1.9.2",
    "@phnq/model": "^1.6.10",
    "bcrypt": "^3.0.6",
    "crypto-random-string": "^3.0.1",
    "pretty-hrtime": "^1.0.3",
    "uuid": "^3.3.3",
    "validator": "^11.1.0"
  }
}
